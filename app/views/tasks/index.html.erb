<h1>Listing tasks</h1>

<table border=1>
  <tr>
    <th>Labticketid</th>
    <th>Description</th>
    <th>Assignedtech</th>
    <th>Completed</th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.labTicketID %></td>
    <td><%= task.description %></td>
    <td><%= User.find(task.assignedTech).formal_name %></td>
    <td><%= task.completed? %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
  </tr>
<% end %>
</table>

