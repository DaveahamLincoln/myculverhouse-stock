<h1>Listing locations</h1>

<table border=1>
  <tr>
    <th>Name</th>
    <th>Notes</th>
  </tr>

<% @locations.each do |location| %>
  <tr class="spriteButton" onclick="document.location='<%=location_path(location.id)%>'" style="cursor:pointer">
    <td><%= location.name %></td>
    <td><%= location.notes %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Location', new_location_path %>
