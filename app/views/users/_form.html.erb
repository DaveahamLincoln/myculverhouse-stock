<h1 class="text-center">Add New User</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
      <div class="span6 offset5">
        <div class="text-left alert alert-danger">Form is invalid
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </span>
  <% end %>

  <div class="field">
  <%= f.label "First Name" %>
  <%= f.text_field :firstName %>
  </div>  

  <div class="field">
  <%= f.label "Last Name" %>
  <%= f.text_field :lastName %>
  </div>  

  <!--NEED TO VALIDATE EMAIL-->
  <div class="field">
    <%= f.label "Email" %>
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
  <%= f.label "Phone Number" %>
  <%= f.text_field :phone %>
  </div>  

  <div class="field">
    <%= f.label "Password" %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label "Reenter Password" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions"><%= f.submit %></div>
  </div>
<% end %>

