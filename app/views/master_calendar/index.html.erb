<h1 align="center">
	<%=link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m")%>
	<%=@date.strftime("%B %Y")%>
	<%=link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m")%>
</h1>

<%= calendar_for @calendar_items, year: @date.year, month: @date.month do |t| %>
  <%= t.head('Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday') %>
  <%= t.day(day_method: :calendarDate) do |day, tasks| %>
    <div>
		<%= day.day %>
		<% tasks.each do |task| %>
		  <%#= h(task.title) %>
		  <p>
		  	<%= link_to "#{task.title}","/calendar_items/#{task.id}", method: :get%>
		  </p>
		<% end %>
	</div>
  <% end %>
<% end %>
