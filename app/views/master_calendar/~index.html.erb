<div id="calendar">
  <h2 id="month">
    <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m") %>
    <%=h @date.strftime("%B %Y") %>
    <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m") %>
  </h2>
  <% calendar_for(@calendar_items, :year => @date.year, :month => @date.month) do |calendar| %>
    <%= calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday') %>
    <% calendar.day(:day_method => :calendarDate) do |day, calendar_items| %>
      <%= day.day %>
      <ul>
        <% @calendar_items.each do |calendar_item| %>
          <% @action_items.each do |action_item| %>
            <% if action_item.isApproved %>
              <% if calendar_item.actionItemID == action_item.id %>
                <li><%= link_to h(calendar_item.title), calendar_item %></li>
              <%end%>
            <%end%>
          <%end%>
        <%end%>
      </ul>
    <% end %>
  <% end %>
</div>

