<h1>myCulverhouse.ua.edu</h1>

<%if current_user.blank? %>
	<%= link_to '| Login to the Tech Site |','/login',:method => :new %>
<%else%>

	<%if current_user.isFacultyUser %>
		<%= link_to '| Edit my Profile |',"/faculty/#{current_user.lastName}_#{current_user.firstName}"%> <%= link_to '| Edit my Publications |','/publications', :method => :get %>  
	<%end%>

	<%if current_user.isFacultyUser or current_user.godBit %>
		<%= link_to '| Submit a Calendar Item |','/calendar_items/new', :method => :get %>  <%= link_to '| Submit a News Item |','/news_items/new', :method => :get %>
	<%end%>

	<%if current_user.isCommunicationsUser or current_user.godBit%>
