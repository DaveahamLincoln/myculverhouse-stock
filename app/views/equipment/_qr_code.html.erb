<style type="text/css">
 table.qrtable {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
  }

  td.qrtd_black {
    border-left: 4px solid #000;
    padding: 0;
    margin: 0;
    width: 0px;
    height: 4px;
  }

  td.qrtd_white {
    border-left: 4px solid #fff;
    padding: 0;
    margin: 0;
    width: 0px;
    height: 4px;
  }

td.qr-black { border-color: #000;}
td.qr-white { border-color: #fff;}
</style>



<table class="qrtable">
 <% @qr.modules.each_index do |x| -%>
   <tr>
   <% @qr.modules.each_index do |y| -%>
    <% if @qr.dark?(x,y) -%>
    <td class="qrtd_black"/>
    <% else -%>
    <td class="qrtd_white"/>
    <% end -%>
   <% end -%>
   </tr>
 <% end -%>
</table>