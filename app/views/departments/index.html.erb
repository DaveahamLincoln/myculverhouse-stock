<h1>Departments Index</h1>

<%if current_user.godBit or current_user.isSuperUser%>
    <table border=1>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>

      </tr>

    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= link_to("Homepage",Cms::Site.find(department.cms_site_id).path)%></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>

    <br />

      <%= link_to 'New department', new_department_path %>

<%else%>

  <table border=1>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>

  <% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      <td><%= link_to("Homepage",Cms::Site.find(department.cms_site_id).path)%></td>
    </tr>
  <% end %>
  </table>

  <br />

<%end%>