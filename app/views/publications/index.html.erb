<h1>Listing Publications</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Publication</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @publications.each do |publication| %>
  <tr>
    <td><%= User.find(FacultyUser.find(publication.facultyUserID).userID).formal_name %></td>
    <td><%= publication.publicationText %></td>
    <td><%= link_to 'View', publication %></td>
    <td><%= link_to 'Edit', edit_publication_path(publication) %></td>
    <td><%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

